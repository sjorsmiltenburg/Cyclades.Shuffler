<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Cyclades.Shuffler.ViewModels;assembly=Cyclades.Shuffler"
             x:Class="Cyclades.Shuffler.Views.GamePage">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>

    <Label Grid.Row="0" HorizontalTextAlignment="Center" x:Name="RoundLabel" Text="notset" FontSize="20"></Label>

    <StackLayout Grid.Row="1" x:Name="StackLayout">
    </StackLayout>

    <Button Grid.Row="2" x:Name="NextRoundButton"  Text="Next Round" Command="{Binding NextRoundCommand}"></Button>
    <Button Grid.Row="3" x:Name="PreviousRoundButton" Text="Previous Round" Command="{Binding PreviousRoundCommand}"></Button>
    <Button Grid.Row="4" x:Name="EndGameButton" Text="End Game" Command="{Binding EndGameCommand}"></Button>
  </Grid>
</ContentPage>