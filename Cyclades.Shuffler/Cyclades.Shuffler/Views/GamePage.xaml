<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Cyclades.Shuffler.ViewModels;assembly=Cyclades.Shuffler"
             x:Class="Cyclades.Shuffler.Views.GamePage">

  <ContentPage.BindingContext>
    <viewModels:GamePageViewModel></viewModels:GamePageViewModel>
  </ContentPage.BindingContext>
<StackLayout>
  <Label Text="{Binding RoundText}"></Label>
  <Label Text="{Binding Item1Text}"></Label>
  <Label Text="{Binding Item2Text}"></Label>
  <Label Text="{Binding Item3Text}"></Label>
  <Button Text="Next Round" Command="{Binding NextRoundCommand}"></Button>
  <Button Text="Previous Round" Command="{Binding PreviousRoundCommand}"></Button>
  <Button Text="End Game" Command="{Binding EndGameCommand}"></Button>
</StackLayout>
</ContentPage>